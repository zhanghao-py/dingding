<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.bjut.dhl.account.dao.UserRoleDao">

	<resultMap type="cn.edu.bjut.dhl.core.bo.UserRole" id="userRoleResultMap">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="user_id" property="userId" jdbcType="BIGINT" />
		<result column="role_id" property="roleId" jdbcType="BIGINT" />
	</resultMap>

	<insert id="save" parameterType="cn.edu.bjut.dhl.core.bo.UserRole" keyProperty="id">
		insert into tb_user_role (user_id, role_id) 
		values (
			#{userId, jdbcType=BIGINT},
			#{roleId, jdbcType=BIGINT}
		) 
	</insert>
	

</mapper>

